<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <title>Add New Blog</title>
</head>

<body>

  <%- include('./partials/nav') %>

  <form class="container mt-4" action="/blog" method="post" enctype="multipart/form-data">
    <div class=" mb-3">
      <label for="coverImage" class="form-label">Title</label>
      <input type="file" class="form-control" id="coverImage" name="coverImage" aria-describedby="coverImage">
    </div>
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control" id="title" name="title" aria-describedby="title">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="body">Body</label>
      <textarea class="form-control" name="body" id="body"></textarea>
    </div>
    <div class="mb-3">
      <button class="btn btn-primary">Submit</button>
    </div>
  </form>

  <%- include('./partials/scripts') %>
</body>

</html>